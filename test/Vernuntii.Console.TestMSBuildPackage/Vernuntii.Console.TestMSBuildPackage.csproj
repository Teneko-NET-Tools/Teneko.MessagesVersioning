<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <IsTestProject>false</IsTestProject>
  </PropertyGroup>

  <PropertyGroup>
    <_TestDirectory>$(MSBuildProjectDirectory)/bin/Test</_TestDirectory>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Vernuntii.Console.MSBuild.Orphan\Vernuntii.Console.MSBuild.Orphan.csproj" />
    <ProjectReference Include="..\..\src\Vernuntii.Console.GlobalTool.any\Vernuntii.Console.GlobalTool.any.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Exclude="pseudo_projects/**"/>
  </ItemGroup>

  <Target Name="_CleanTest">
    <RemoveDir Directories="$(_TestDirectory)" />
  </Target>

  <Target Name="_PrepareTest">
    <ItemGroup>
      <_ProjectToPack Include="../../src/Vernuntii.Console.MSBuild.Orphan/Vernuntii.Console.MSBuild.Orphan.csproj">
        <Properties>
          NoBuild=true;
          Configuration=$(Configuration);
          PackageOutputPath=$(_TestDirectory)
        </Properties>
      </_ProjectToPack>
    </ItemGroup>

    <MSBuild Projects="@(_ProjectToPack)" Targets="Pack;_GetOutputItemsFromPack">
      <Output TaskParameter="TargetOutputs" ItemName="_OutputItemsFromPack" />
    </MSBuild>

    <ItemGroup>
      <_OutputItemsFromPack Remove="%(_OutputItemsFromPack.Identity)" Condition="'%(Extension)' != '.nupkg'" />
    </ItemGroup>

    <PropertyGroup>
      <_PackageDirectory>$(_TestDirectory)/%(_OutputItemsFromPack.Filename)</_PackageDirectory>
    </PropertyGroup>

    <Unzip SourceFiles="%(_OutputItemsFromPack.Identity)" DestinationFolder="$(_PackageDirectory)" />
  </Target>

  <Target Name="_ExecuteTest" />

  <Target Name="_Test" AfterTargets="VSTest" DependsOnTargets="_CleanTest;_PrepareTest;_ExecuteTest" />

  <Target Name="_PackageContentShouldBeValid" AfterTargets="_ExecuteTest">
    <ItemGroup>
      <_PackageSubPath Include="$(_PackageDirectory)/build/Vernuntii.Console.MSBuild.Orphan.props" />
      <_PackageSubPath Include="$(_PackageDirectory)/build/Vernuntii.Console.MSBuild.Orphan.targets" />
      <_PackageSubPath Include="$(_PackageDirectory)/buildMultiTargeting/Vernuntii.Console.MSBuild.Orphan.props" />
      <_PackageSubPath Include="$(_PackageDirectory)/buildMultiTargeting/Vernuntii.Console.MSBuild.Orphan.targets" />
      <_PackageSubPath Include="$(_PackageDirectory)/deps/msbuild/netstandard2.0" />
    </ItemGroup>

    <Error Text="File or directory was expected to exist: %(_PackageSubPath.Identity)" Condition="!Exists('%(_PackageSubPath.Identity)')" />
    <Message Importance="high" Text="Test(s) of $(RootNamespace) succeeded" />
  </Target>

  <Target Name="_PseudoProjectsShouldBuildByUsageOfPackageContent" AfterTargets="_PackageShouldHaveContent">
    <PropertyGroup>
      <!-- <VernuntiiTargets>$(MSBuildThisFileDirectory)bin/Test/Vernuntii.Console.MSBuild.Orphan.1.0.0/build/Vernuntii.Console.MSBuild.Orphan.targets</VernuntiiTargets> -->
    </PropertyGroup>

    <!-- <Exec Command="dotnet build" EnvironmentVariables="CustomBeforeMicrosoftCommonProps=$(VernuntiiTargets)" /> -->
  </Target>

</Project>
